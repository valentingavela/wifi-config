Defaults	env_reset
Defaults	mail_badpass
Defaults	secure_path="/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"

# Host alias specification

# User alias specification

# Cmnd alias specification

# User privilege specification
root	ALL=(ALL:ALL) ALL
www-data ALL = NOPASSWD:/sbin/iw
www-data ALL = NOPASSWD:/usr/bin/wpa_passphrase
www-data ALL = NOPASSWD:/usr/sbin/hostapd
www-data ALL = NOPASSWD:/usr/sbin/dnsmasq 
www-data ALL = NOPASSWD:/etc/dnsmasq.d 
www-data ALL = NOPASSWD:/etc/dnsmasq.conf 
www-data ALL = NOPASSWD:/usr/share/dnsmasq
www-data ALL = NOPASSWD:/sbin/dhcpcd 
www-data ALL = NOPASSWD:/etc/dhcpcd.conf 
www-data ALL = NOPASSWD:/lib/dhcpcd
www-data ALL = NOPASSWD:/sbin/iptables
www-data ALL = NOPASSWD:/usr/share/iptables
www-data ALL = NOPASSWD:/sbin/dhclient
www-data ALL = NOPASSWD:/usr/sbin/service

# Allow members of group sudo to execute any command
%sudo	ALL=(ALL:ALL) ALL
